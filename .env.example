# =============================================================================
# ECCLESIAFLOW AUTHENTICATION MODULE - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and configure values according to your environment

# =============================================================================
# ENVIRONMENT PROFILE
# =============================================================================
SPRING_PROFILES_ACTIVE=dev

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
ECCLESIAFLOW_AUTH_MODULE_BASE_URL=http://localhost:8081

# =============================================================================
# EXTERNAL SERVICES MEMBERS MODULE
# =============================================================================
ECCLESIAFLOW_MEMBERS_MODULE_BASE_URL=http://localhost:8080

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MySQL Production
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ecclesiaflow_auth
DB_USERNAME=ecclesiaflow
DB_PASSWORD=your-secure-database-password

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# JWT Secret - REQUIRED in production (minimum 256 bits)
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-for-production-security
# Token lifetime in milliseconds (900000 = 15 minutes)
JWT_EXPIRATION=900000
# Refresh token lifetime (604800000 = 7 days)
JWT_REFRESH_TOKEN_EXPIRATION=604800000
# Temporary token lifetime in milliseconds (900000 = 15 minutes)
JWT_TEMPORARY_TOKEN_EXPIRATION=900000

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# Default admin account
ADMIN_EMAIL=admin@ecclesiaflow.com
ADMIN_PASSWORD=your-secure-admin-password
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=EcclesiaFlow

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS - Allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://app.ecclesiaflow.com,https://admin.ecclesiaflow.com

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_KEYSTORE_PATH=/path/to/keystore.p12
SSL_KEYSTORE_PASSWORD=your-keystore-password

# =============================================================================
# CACHE CONFIGURATION (OPTIONAL)
# =============================================================================
# Cache type (simple, redis)
CACHE_TYPE=simple
# Redis configuration (if CACHE_TYPE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Application log level
LOGGING_LEVEL_ECCLESIAFLOW=INFO
# Spring Security log level
LOGGING_LEVEL_SECURITY=WARN

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Port for monitoring endpoints (Actuator)
MANAGEMENT_SERVER_PORT=8081
# Exposed endpoints (comma-separated)
MANAGEMENT_ENDPOINTS=health,info,metrics
# =============================================================================
# DEVELOPMENT CONFIGURATION (Dev profile only)
# =============================================================================
# H2 Console (dev only)
H2_CONSOLE_ENABLED=true
# SQL query display (dev only)
JPA_SHOW_SQL=true

# =============================================================================
# IMPORTANT NOTES
# =============================================================================
# 1. NEVER commit the .env file with real values
# 2. Use strong secrets in production (JWT_SECRET, passwords)
# 3. Configure SSL/TLS in production (SSL_ENABLED=true)
# 4. Restrict CORS_ALLOWED_ORIGINS in production
# 5. Use Redis cache in production for better performance

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_FROM=your-email@gmail.com
